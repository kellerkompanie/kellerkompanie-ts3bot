#!/bin/sh
set -e

DATA_DIR="/var/lib/keko-ts3bot"

case "$1" in
    purge)
        # Remove data directory
        if [ -d "$DATA_DIR" ]; then
            rm -rf "$DATA_DIR"
        fi

        # Remove teamspeak3bot user
        if id -u teamspeak3bot >/dev/null 2>&1; then
            userdel teamspeak3bot 2>/dev/null || true
        fi

        # Reload systemd
        systemctl daemon-reload 2>/dev/null || true
        ;;
    remove|upgrade|failed-upgrade|abort-install|abort-upgrade|disappear)
        ;;
    *)
        echo "postrm called with unknown argument \`$1'" >&2
        exit 1
        ;;
esac

#DEBHELPER#

exit 0
